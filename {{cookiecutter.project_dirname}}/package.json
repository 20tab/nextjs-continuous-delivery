{
  "name": "{{ cookiecutter.project_slug }}",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "node server.js",
    "test": "npx jest --testPathIgnorePatterns=pact/contracts --testEnvironment=jsdom --detectOpenHandles",
    "pact": "npx jest pact/contracts --detectOpenHandles",
    "eslint": "npx eslint . --fix-dry-run",
    "audit:fix": "npm i --package-lock-only && npm audit fix && rm yarn.lock && yarn import && rm package-lock.json",
    "coverage": "yarn pact --coverage --passWithNoTests --coverageDirectory ./coverage/pacts && yarn test --coverage --coverageDirectory ./coverage/tests && npx istanbul-merge --out ./coverage/coverage-final.json ./coverage/pacts/coverage-final.json ./coverage/tests/coverage-final.json && npx istanbul report --include ./coverage/coverage-final.json --dir ./coverage lcov clover json-summary && rm -rf ./coverage/pacts && rm -rf ./coverage/tests"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "@sentry/nextjs": "^6.13.3",
    "axios": "^0.23.0",
    "basic-auth": "^2.0.1",
    "express": "^4.17.1",
    "next": "^11.1.2",
    "next-redux-wrapper": "^7.0.5",
    "nookies": "^2.5.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-redux": "^7.2.5",
    "redux": "^4.1.1",
    "styled-components": "^5.3.1",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^11.1.2",
    "@pact-foundation/pact": "^9.16.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/basic-auth": "^1.1.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-redux": "^7.1.19",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "axios-mock-adapter": "^1.20.0",
    "babel-plugin-styled-components": "^1.13.2",
    "eslint": "^8.0.1",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "istanbul-merge": "^1.1.1",
    "jest": "^27.2.5",
    "jest-pact": "^0.9.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true,
    "trailingComma": "none",
    "useTabs": false
  },
  "eslintConfig": {
    "ignorePatterns": "*.js",
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "next",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react/prop-types": 0,
      "react/no-unescaped-entities": 0,
      "camelcase": [
        2,
        {
          "properties": "always"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/$1"
    }
  }
}
