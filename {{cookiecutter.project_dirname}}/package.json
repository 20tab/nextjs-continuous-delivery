{
  "name": "{{ cookiecutter.project_slug }}",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "node server.js",
    "eslint": "npx eslint . --fix-dry-run",
    "pact": "npx jest pact/contracts --detectOpenHandles",
    "test": "npx jest --testPathIgnorePatterns=pact/contracts --testEnvironment=jsdom --detectOpenHandles",
    "ci:unit-test": "npx jest --detectOpenHandles --testPathIgnorePatterns=pact/contracts --testEnvironment=jsdom --coverage --coverageDirectory ./coverage/tests --ci --reporters=default --reporters=jest-junit",
    "ci:contract-test": "npx jest pact/contracts --detectOpenHandles --coverage --passWithNoTests --coverageDirectory ./coverage/pacts",
    "coverage": "npx istanbul-merge --out ./coverage/coverage-final.json ./coverage/pacts/coverage-final.json ./coverage/tests/coverage-final.json && npx istanbul report --include ./coverage/coverage-final.json --dir ./coverage text-summary text json-summary"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.0",
    "@sentry/nextjs": "^6.18.2",
    "axios": "^0.26.0",
    "basic-auth": "^2.0.1",
    "express": "^4.17.3",
    "next": "^12.1.0",
    "next-redux-wrapper": "^7.0.5",
    "nookies": "^2.5.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "styled-components": "^5.3.3",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@next/eslint-plugin-next": "^12.1.0",
    "@pact-foundation/pact": "^9.17.2",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/basic-auth": "^1.1.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-redux": "^7.1.23",
    "@types/styled-components": "^5.1.24",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "axios-mock-adapter": "^1.20.0",
    "babel-plugin-styled-components": "^2.0.6",
    "eslint": "8.10.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.3",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "jest-pact": "^0.9.1",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2",
    "webpack": "^5.63.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true,
    "trailingComma": "none",
    "useTabs": false
  },
  "eslintConfig": {
    "ignorePatterns": "*.js",
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "next",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "camelcase": [
        2,
        {
          "properties": "always"
        }
      ],
      "prettier/prettier": "error",
      "react/no-unescaped-entities": 0,
      "react/prop-types": 0
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "components/**/*.{ts,tsx}",
      "utils/hooks/*.{ts,tsx}",
      "utils/*.{ts,tsx}"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/$1"
    }
  }
}
