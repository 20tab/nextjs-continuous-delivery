{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom","dom.iterable","esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {"@/*":["*"]},
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
  },
  "include": [
    "**/*.test.tsx",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
  ],
  "exclude": [
    "*.js",
    "cypress/**",
    "node_modules"
  ]
}
